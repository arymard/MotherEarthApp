<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Alert_1">
    <TextView
            android:id="@+id/simulasi_fi"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="180dp"
            android:text="Simulasi Fitur Earth Quake"
            android:textAppearance="@style/simulasi"
    />
    <View
            android:id="@+id/img_alert"
            android:layout_width="323dp"
            android:layout_height="261dp"
            app:layout_constraintTop_toBottomOf="@id/simulasi_fi"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:background="@drawable/background_alert"
            android:layout_marginTop="30dp"
    />
    <ImageView
            android:layout_width="142dp"
            android:layout_height="250dp"
            android:src="@drawable/alert_simulasi"
            app:layout_constraintRight_toRightOf="@id/img_alert"
            app:layout_constraintLeft_toLeftOf="@id/img_alert"
            app:layout_constraintTop_toTopOf="@id/img_alert"
            app:layout_constraintBottom_toBottomOf="@id/img_alert"
    />
    <TextView
            android:id="@+id/instruction1"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_alert"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="10dp"
            android:text="@string/instruksi1"
    />
    <TextView
            android:id="@+id/instruction2"
            android:layout_width="315dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/instruction1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="15dp"
            android:text="@string/instruksi2"
    />
</android.support.constraint.ConstraintLayout>